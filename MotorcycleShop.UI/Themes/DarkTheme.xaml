<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Цвета темной темы -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="WindowBackgroundColor" Color="#2D2D30"/>
    <SolidColorBrush x:Key="ForegroundColor" Color="White"/>
    <SolidColorBrush x:Key="ControlBackgroundColor" Color="#3F3F46"/>
    <SolidColorBrush x:Key="ControlBorderColor" Color="#565656"/>
    <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#333337"/>
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="White"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundColor" Color="#4A4A4F"/>
    <SolidColorBrush x:Key="DataGridBackgroundColor" Color="#2D2D30"/>
    <SolidColorBrush x:Key="DataGridRowBackgroundColor" Color="#333337"/>
    <SolidColorBrush x:Key="DataGridRowAlternatingColor" Color="#3F3F46"/>
    <SolidColorBrush x:Key="DataGridHeaderBackgroundColor" Color="#3F3F46"/>
    <SolidColorBrush x:Key="DataGridHeaderForegroundColor" Color="White"/>
    <SolidColorBrush x:Key="StatusBarBackgroundColor" Color="#333337"/>
    <SolidColorBrush x:Key="StatusBarForegroundColor" Color="White"/>
    <SolidColorBrush x:Key="TextBoxBackgroundColor" Color="#333337"/>
    <SolidColorBrush x:Key="TextBoxForegroundColor" Color="White"/>
    <SolidColorBrush x:Key="ComboBoxBackgroundColor" Color="#333337"/>
    <SolidColorBrush x:Key="ComboBoxForegroundColor" Color="White"/>
    <SolidColorBrush x:Key="GroupBoxBackgroundColor" Color="#2D2D30"/>
    <SolidColorBrush x:Key="GroupBoxForegroundColor" Color="White"/>

    <!-- Стили для элементов управления -->
    <Style x:Key="DarkButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonForegroundColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ControlBorderColor}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ButtonHoverBackgroundColor}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#4A4A4F"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DarkDataGridStyle" TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource DataGridBackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource DataGridRowAlternatingColor}"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
    </Style>

    <Style x:Key="DarkTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource TextBoxBackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBoxForegroundColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ControlBorderColor}"/>
    </Style>

    <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource ComboBoxBackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource ComboBoxForegroundColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ControlBorderColor}"/>
    </Style>

    <Style x:Key="DarkGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="Background" Value="{StaticResource GroupBoxBackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource GroupBoxForegroundColor}"/>
    </Style>

    <Style x:Key="DarkStatusBarStyle" TargetType="StatusBar">
        <Setter Property="Background" Value="{StaticResource StatusBarBackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource StatusBarForegroundColor}"/>
    </Style>

</ResourceDictionary>