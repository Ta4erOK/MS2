<Window x:Class="MotorcycleShop.UI.MotorcycleEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotorcycleShop.UI"
        mc:Ignorable="d"
        Title="Редактирование мотоцикла" Height="600" Width="500">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" x:Name="TitleTextBlock" 
                   Text="Добавление нового мотоцикла" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Форма ввода -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <StackPanel Margin="0,5,0,5">
                <TextBlock Text="Марка:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="BrandTextBox" Height="30"/>
            </StackPanel>

            <StackPanel Margin="0,5,0,5">
                <TextBlock Text="Модель:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="ModelTextBox" Height="30"/>
            </StackPanel>

            <StackPanel Margin="0,5,0,5">
                <TextBlock Text="Год выпуска:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="YearTextBox" Height="30"/>
            </StackPanel>

            <StackPanel Margin="0,5,0,5">
                <TextBlock Text="Цвет:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="ColorTextBox" Height="30"/>
            </StackPanel>

            <StackPanel Margin="0,5,0,5">
                <TextBlock Text="Объем двигателя:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="EngineVolumeTextBox" Height="30"/>
            </StackPanel>

            <StackPanel Margin="0,5,0,5">
                <TextBlock Text="Пробег (км):" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="MileageTextBox" Height="30"/>
            </StackPanel>

            <StackPanel Margin="0,5,0,5">
                <TextBlock Text="Цена:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="PriceTextBox" Height="30"/>
            </StackPanel>

            <StackPanel Margin="0,5,0,5">
                <TextBlock Text="Описание:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="DescriptionTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>

            <StackPanel Margin="0,5,0,5">
                <CheckBox x:Name="InStockCheckBox" Content="В наличии" IsChecked="True" Margin="0,5,0,5"/>
            </StackPanel>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="SaveButton" 
                    Content="Сохранить" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,15,0"
                    Click="SaveButton_Click"/>
            
            <Button x:Name="CancelButton" 
                    Content="Отмена" 
                    Width="100" 
                    Height="35" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>